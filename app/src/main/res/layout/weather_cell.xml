<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/weather_time_tv"
            android:textSize="8sp"
            android:textStyle="bold"
            android:text="@string/weather_title"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:id="@+id/weather_image_iv"
            android:layout_marginVertical="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/weather_celsius_tv"
            android:textSize="8sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text="@string/weather_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/weather_description_tv"
            android:textSize="8sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text="@string/weather_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/weather_day_tv"
            android:textSize="8sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text="@string/weather_title"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/weather_date_tv"
            android:textSize="8sp"
            android:textStyle="bold"
            android:text="@string/weather_title"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>